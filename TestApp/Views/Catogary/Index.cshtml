@*Fetching This List from Controller*@
@model IEnumerable<TestApp.Models.CatogaryModel>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Catagory List</h2>
        </div>
        <div class="col-6">
            @* To rerouting to any page  asp-controller="Catogary" asp-action="Create" *@
            <a asp-controller="Catogary" asp-action="Create" class="btn btn-primary">Create New Catagory </a>
        </div>
    </div>

    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Catagory Name
                    </th>


                    <th>
                        Dispaly Order
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td style="width:50%">
                            @obj.Name
                        </td>


                        <td style="width:30%">
                            @obj.Order
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                @*asp-route-id="@obj.CatID" for sending data/ID to controller*@
                                <a asp-controller="Catogary" asp-route-id="@obj.CatID" asp-action="Edit" class="btn btn-primary mx-2">Edit </a>
                                <a asp-controller="Catogary" asp-route-id="@obj.CatID" asp-action="Delete" class="btn btn-primary mx-2">Delete </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>No Catagory Exists</p>
    }

</div>